{
  "mashling_schema": "1.0",
  "gateway": {
    "name": "MyProxy",
    "version": "1.0.0",
    "description": "This is a simple proxy.",
    "triggers": [
      {
        "name": "MyProxy",
        "description": "HTTP Trigger Using the Default Gateway Pattern",
        "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
        "settings": {
          "port": "9096"
        },
        "handlers": [
          {
            "dispatch": "HTTP",
            "settings": {
              "autoIdReply": "false",
              "method": "GET",
              "path": "/magic",
              "useReplyHandler": "false"
            }
          }
        ]
      }
    ],
    "dispatches": [
      {
        "name": "HTTP",
        "pattern": "DefaultHttpPattern",
        "configuration": {
          "useJWT": false,
          "jwtKey": "qwertyuiopasdfghjklzxcvbnm123456",
          "backendUrl": "http://www.cnn.com"
        }
      }
    ]
  }
}
