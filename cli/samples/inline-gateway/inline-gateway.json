{
	"mashling_schema": "0.2",
	"gateway": {
		"name": "microgateway",
		"version": "1.0.0",
		"display_name":"Inline Gateway",
		"display_image":"displayImage.svg",
		"description": "This is the first microgateway app",
		"configurations": [
			{
				"name": "kafkaConfig",
				"type": "github.com/TIBCOSoftware/flogo-contrib/trigger/kafkasub",
				"description": "Configuration for kafka cluster",
				"settings": {
					"BrokerUrl": "localhost:9095"
				}
			}
		],
		"triggers": [
			{
				"name": "OrdersTrigger",
				"description": "The trigger on 'orders' topic",
				"type": "github.com/TIBCOSoftware/flogo-contrib/trigger/kafkasub",
				"settings": {
					"Topic": "orders",
					"config": "${configurations.kafkaConfig}"
				}
			}
		],
		"event_handlers": [
			{
				"name": "OrderHandler",
				"description": "Handle the order processing",
				"params": {
					"message": "${(trigger).content}"
				},
				"definition": {
					"data": {
						"flow": {
							"type": 1,
							"attributes": [],
							"rootTask": {
								"id": 1,
								"type": 1,
								"tasks": [
									{
										"id": 2,
										"name": "Log Message",
										"description": "Simple Log Activity",
										"type": 1,
										"activityType": "tibco-log",
										"activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
										"attributes": [
											{
												"name": "message",
												"value": "",
												"required": false,
												"type": "string"
											},
											{
												"name": "flowInfo",
												"value": "false",
												"required": false,
												"type": "boolean"
											},
											{
												"name": "addToFlow",
												"value": "false",
												"required": false,
												"type": "boolean"
											}
										],
                                "inputMappings": [
                                    {
                                        "type": 1,
                                        "value": "{T.message}",
                                        "mapTo": "message"
                                    }
                                ]
									}
								],
								"links": [],
								"attributes": []
							}
						}
					},
					"id": "order_handler",
					"ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow"
				}
			}
		],
		"event_links": [
			{
				"triggers": [
					"OrdersTrigger"
				],
				"dispatches": [
					{
						"handler": "OrderHandler"
					}
				]
			}
		]
	}
}
